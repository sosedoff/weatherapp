<div class="card forecast current">
  <div class="card-body">
    <h5 class="card-title">
      <%= location.city %>, <%= location.state %>
    </h5>
    <hr/>
    <div class="text-center">
      <div class="spinner-border" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
      <div class="p-3">
        Please wait while we are fetching weather details...
      </div>
    </div>
  </div>
</div>
